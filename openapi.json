{
  "openapi": "3.0.0",
  "info": {
    "title": "Integrations API",
    "description": "API for package registry scrapper integrations",
    "version": "1.0.0"
  },
  "paths": {
    "/jobs": {
      "get": {
        "summary": "Get jobs",
        "description": "Get jobs",
        "tags": ["jobs"],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Limit the number of jobs to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Order the jobs by",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"]
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "Cursor for pagination to fetch jobs after a specific job ID",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Jobs",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedJobResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new job",
        "description": "Initiates a job for the specified package from the registry",
        "tags": ["jobs"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/JobResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaginatedJobResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JobResponse"
            }
          },
          "next_cursor": {
            "type": ["string", "null"],
            "description": "Cursor for pagination to fetch the next page of results"
          }
        }
      },
      "JobRequest": {
        "type": "object",
        "required": ["registry_name", "package_name"],
        "properties": {
          "registry_name": {
            "type": "string",
            "enum": ["crates.io", "jsr.io"],
            "description": "Name of the package registry"
          },
          "package_name": {
            "type": "string",
            "description": "Name of the package to scrap"
          }
        }
      },
      "JobResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the created job"
          },
          "registry_name": {
            "type": "string",
            "enum": ["crates.io"],
            "description": "Name of the package registry"
          },
          "package_name": {
            "type": "string",
            "description": "Name of the package"
          },
          "status": {
            "type": "string",
            "enum": ["processing", "complete"],
            "description": "Status of the job"
          },
          "trace_id": {
            "type": "string",
            "description": "Trace identifier for logging and debugging"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the job was created"
          }
        }
      }
    }
  }
}
